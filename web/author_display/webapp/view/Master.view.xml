<core:View displayBlock="true" controllerName="author_display.controller.Master" height="100%"
	  xmlns="sap.m"
	  xmlns:f="sap.f"
	  xmlns:core="sap.ui.core">
	<f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false">
		<!-- Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title
                            id="authorsTableTitle"
                    />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- Content -->
		<f:content>
			<Table id="authorsTable"
				   inset="false"
				   items="{
						path: 'authors>/Authors'
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto"
                   updateFinished=".onUpdateFinished">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField search="onSearch" width="17.5rem"/>
						<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press="onAdd"/>
						<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Author name" />
					</Column>
					<Column	hAlign="Center">
						<Text text="Created" />
					</Column>
					<Column	hAlign="Center">
						<Text text="Last modified" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{authors>name}" text="{authors>author_id}" />
							<ObjectIdentifier
									text="{
											 path: 'authors>created',
											 type: 'sap.ui.model.type.DateTime',
											 formatOptions: {
												pattern: 'HH:mm:ss, dd.MM.yyyy',
												strictParsing: true ,
												UTC: true
											 }
										  }"
							/>
							<ObjectIdentifier
									text="{
											 path: 'authors>updated',
											 type: 'sap.ui.model.type.DateTime',
											 formatOptions: {
												pattern: 'HH:mm:ss, dd.MM.yyyy',
												strictParsing: true ,
												UTC: true
											 }
										  }"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</core:View>